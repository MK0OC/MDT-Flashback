enum BloodType {
    A_POSITIVE
    A_NEGATIVE
    B_POSITIVE
    B_NEGATIVE
    AB_POSITIVE
    AB_NEGATIVE
    O_POSITIVE
    O_NEGATIVE
}

model EmergencyContact {
    id        String @id @default(uuid())

    citizen   Citizen @relation("CitizenEmergencyContacts", fields: [citizenId], references: [id])
    citizenId String

    contact   Citizen @relation("EmergencyContactCitizen", fields: [contactId], references: [id])
    contactId String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([citizenId, contactId])
    @@map("emergency_contact")
}

model Pathologies {
    id        String @id @default(uuid())

    citizen  Citizen @relation("CitizenPathologies", fields: [citizenId], references: [id])
    citizenId String

    doctor  String
    diagnosis String
    description String
    report String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([citizenId])
    @@map("pathologies")
}

model Interventions {
    id String @id @default(uuid())

    citizen Citizen @relation("Interventions", fields: [citizenId], references: [id])
    citizenId String

    clinicalExam String
    careProvided String
    checkup String
    ata Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([citizenId])
    @@map("interventions")
}