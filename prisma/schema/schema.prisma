  SAMD
  SAFD
  SASP
  MCD
  DOJ
}

enum Role { // -> Enum pour les différents rôles d'utilisateurs.
  SUPERADMIN
  USER
}

enum UserStatus { // -> Enum pour les différents statuts d'utilisateurs.
  PENDING
  ACTIVE
}